<html lang="en">

<head>
    <title><%= pageTitle %></title>
    <style>
        @page {
            size: landscape;
        }
        @media print {
            @page {
                size: landscape;
                margin: 0 1.6cm 0 1.6cm;
            }
            body {
                margin: 1.6cm 0 0 0;
            }

            table {
                table-layout: unset;
            }
        }
        * {
            font-family: 'Times New Roman', serif;
        }
        h1 {
            text-align: center;
        }
        table {
            border-collapse: collapse;
            table-layout: unset;
            font-family: 'Times New Roman', serif;
            font-size: 12px;
            text-align: center;
            width: 200%;
        }
        th, td, tr {
            border: 1px solid;
            text-align: left;
            padding-top: 0;
            padding-bottom: 0;
            word-wrap: unset;
            overflow: hidden;
            width: 20px;
            height:10px;
        }
    </style>
</head>

<body>
    <table style="width: 70%;" id="datatable">
        <%- tableData %>
    </table>
</body>

</html>