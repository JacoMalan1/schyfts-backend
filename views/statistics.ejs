<html lang="en">
<head>
    <title><%= pageTitle %></title>
    <style>
        @media print {
            @page {
                size: landscape;
                margin: 0 1.6cm 0 1.6cm;
            }
            body {
                margin: 1.6cm 0 0 0;
            }

            table {
                table-layout: unset;
            }
        }
        * {
            font-family: 'Times New Roman', serif;
        }
        h1 {
            text-align: center;
        }
        table {
            border-collapse: collapse;
            table-layout: unset;
            font-family: 'Times New Roman', serif;
            font-size: 12px;
            text-align: center;
            width: 200%;
        }
        th, td {
            border: 1px solid;
            text-align: left;
            padding-top: 0;
            padding-bottom: 0;
            word-wrap: unset;
            overflow: hidden;
            width: 20px;
            height:10px;
        }
        #Logo {
            alignment: left;
            vertical-align: top;
            padding-top: 0;
            padding-bottom: 20px;
        }
        #StatsFrom {
            text-align: left;
            padding-left: 100px;
        }
    </style>
</head>

<body>

<img id="Logo" src="/nelanest.png" width="200" height="43">
<h3 id="StatsFrom"><%= statsFrom %></h3>

<table style="width: 70%;" id="datatable">
    <%- tableData %>
</table>

</br>

</body>
</html>